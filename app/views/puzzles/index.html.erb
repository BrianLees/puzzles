<p id="notice"><%= notice %></p>

<h1>Puzzles</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @puzzles.each_slice(4) do |batch| %>
      <tr>
        <% batch.each do |puzzle| %>
          <td><%= link_to image_tag(puzzle.thumbnail_file_name), puzzle %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
